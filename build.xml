<?xml version="1.0" encoding="UTF-8" ?>

<project name="CSKBankingApplication" default="build">

	<property name="java.src.dir" value="src/main/java" />
	<property name="webapp.dir" value="src/main/webapp" />
	<property name="result.dir" value="result"/>

	<target name="build" depends="directories">
		<echo message="Jave Source files : ${java.src.dir}" />
		<echo message="Webapp Source dir : ${webapp.dir}" />
		<echo message="Result Destination: ${result.dir}" />

		<copy todir="${result.dir}">
            <fileset dir="${webapp.dir}"/>
        </copy>

		<javac destdir="${result.dir}/WEB-INF/classes">
			<src path="${java.src.dir}" />
			<src path="${webapp.dir}/WEB-INF/lib" />
			<src path="/home/sharan-pt-7373/.m2/repositories"/>
		</javac>
	</target>

	<target name="directories" depends="clean">
		<echo message="Created required directories"/>
		<mkdir dir="${result.dir}/WEB-INF/classes"/>
	</target>

	<target name="clean">
		<echo message="Cleaning previous result"/>
		<delete dir="${result.dir}"/>
	</target>

</project>